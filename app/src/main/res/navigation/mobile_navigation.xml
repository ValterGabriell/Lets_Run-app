<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/id_home">

    <fragment
        android:id="@+id/id_home"
        android:name="com.example.runapp.ui.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_id_home_to_finishRunFragment"
            app:destination="@id/finishRunFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

    </fragment>

    <fragment
        android:id="@+id/id_profile"
        android:name="com.example.runapp.ui.ui.profile.ProfileFragment"
        android:label="fragment_profile2"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/finishRunFragment"
        android:name="com.example.runapp.ui.ui.finish.FinishRunFragment"
        android:label="fragment_finish_run"
        tools:layout="@layout/fragment_finish_run" >
        <argument
            android:name="timerInsSeconds"
            app:argType="string"
            android:defaultValue="00:00:00" />
        <argument
            android:name="distanceTotal"
            app:argType="float"
            android:defaultValue="0" />
        <argument
            android:name="kmh"
            app:argType="float"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_finishRunFragment_to_showLastDataFragment"
            app:destination="@id/showLastDataFragment" />
    </fragment>
    <fragment
        android:id="@+id/showLastDataFragment"
        android:name="com.example.runapp.ui.ui.showlast.ShowLastDataFragment"
        android:label="fragment_show_last_data"
        tools:layout="@layout/fragment_show_last_data" >
        <argument
            android:name="mediaRun"
            app:argType="float"
            android:defaultValue="0" />
        <argument
            android:name="timeRun"
            app:argType="string"
            android:defaultValue="00:00:00" />
        <argument
            android:name="distanciaTotal"
            app:argType="float"
            android:defaultValue="0" />
        <argument
            android:name="daynight"
            app:argType="string"
            android:defaultValue="Dia" />
        <argument
            android:name="note"
            app:argType="string"
            android:defaultValue="Null" />
        <argument
            android:name="emotion"
            app:argType="string"
            android:defaultValue="satisfeito" />
        <argument
            android:name="local"
            app:argType="string"
            android:defaultValue="cidade" />
        <action
            android:id="@+id/action_showLastDataFragment_to_id_profile"
            app:destination="@id/id_profile" />
    </fragment>
</navigation>